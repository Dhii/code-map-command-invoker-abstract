{
    "name": "dhii/code-map-command-invoker-abstract",
    "description": "Abstract functionality for command invokers that work with a command code map.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "dhii/invoker-interface": "^0.1"
    },
    "suggest": {
        "dhii/invoker-abstract": "For awareness of concepts that are common to invokers",
        "dhii/invoker-base": "For standard concrete implementations of invocation exceptions and their factories"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\Invocation\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    }
}
